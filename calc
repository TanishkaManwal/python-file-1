def sum(a,b):
    return a+b
def sub(a,b):
    return a-b 
def mul(a,b):
    return a*b
def div(a,b):
    return a/b
select = int(input("select operation: "))
a =int(input("enter a : "))
b =int(input("enter b : "))
if select==1:
    print(a,"+",b,"=",
          sum(a,b))
if select==2:
    print(a,"-",b,"=",
          sub(a,b))
if select==3:
    print(a,"*",b,"=",
          mul(a,b)) 
if select==4:
    print(a,"/",b,"=",
          div(a,b)) 
